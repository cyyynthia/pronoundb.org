export interface Props {
	id?: string
	selected: string
}

const { id, selected } = Astro.props
---
<select class='w-full px-2 py-1 mb-8 bg-gray-200 dark:bg-gray-700' id={id}>
	<option value='unspecified' selected={selected === 'unspecified'}>Unspecified</option>
	<option value='hh' selected={selected === 'hh'}>he/him</option>
	<option value='hi' selected={selected === 'hi'}>he/it</option>
	<option value='hs' selected={selected === 'hs'}>he/she</option>
	<option value='ht' selected={selected === 'ht'}>he/they</option>
	<option value='ih' selected={selected === 'ih'}>it/he</option>
	<option value='ii' selected={selected === 'ii'}>it/its</option>
	<option value='is' selected={selected === 'is'}>it/she</option>
	<option value='it' selected={selected === 'it'}>it/they</option>
	<option value='shh' selected={selected === 'shh'}>she/he</option>
	<option value='sh' selected={selected === 'sh'}>she/her</option>
	<option value='si' selected={selected === 'si'}>she/it</option>
	<option value='st' selected={selected === 'st'}>she/they</option>
	<option value='th' selected={selected === 'th'}>they/he</option>
	<option value='ti' selected={selected === 'ti'}>they/it</option>
	<option value='ts' selected={selected === 'ts'}>they/she</option>
	<option value='tt' selected={selected === 'tt'}>they/them</option>
	<option value='any' selected={selected === 'any'}>Any pronouns</option>
	<option value='other' selected={selected === 'other'}>Other pronouns</option>
	<option value='ask' selected={selected === 'ask'}>Ask me my pronouns</option>
	<option value='avoid' selected={selected === 'avoid'}>Avoid pronouns, use my name</option>
</select>
